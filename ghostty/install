#!/bin/bash

# this file generates the config file for the current pc

# this is in relation to .dotfiles root
CONFIG="ghostty/.config/ghostty/config"

rm -f $CONFIG

echo "# autogenerated by install script in .dotfiles" >> $CONFIG
echo "" >> $CONFIG
echo "config-file = common.conf" >> $CONFIG

case `hostname` in
    "archwatermelon")
        echo "config-file = watermelon.conf" >> $CONFIG
        ;;
    "MacBook-Pro-de-Erik.local")
        echo "config-file = fevermac.conf" >> $CONFIG
        ;;
    *)
        ;;
esac
